<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Cart</title>
  </head>
  <body>
    <nav class="navBar">
      <h1>Cart</h1>
      <ul class="options">
        <li><a href="/chatView">Chat</a></li>
        <li><a href="/products">Products</a></li>
        <li>
          <a href="/cart/64b74c217acb6a39b4ad944f">Ver Carrito de Admin</a>
        </li>
      </ul>
    </nav>

    <main class="mainCart">
      <table class="productTable">
        <thead>
          <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% cart.payload.products.forEach(p => { %>
          <tr class="productRow" id="<%=p.product._id%>">
            <td><img src="<%= p.product.imagen%>" alt="" /></td>
            <td><%= p.product.nombre %></td>
            <td><%= p.product.precio %></td>
            <td><%= p.cant %></td>
            <td><button onclick="remove('<%=p.product._id%>')">Remover</button></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        const remove = (id)=>{
            fetch('/api/cart/64b74c217acb6a39b4ad944f/products/'+id, {method:'DELETE'})
            $(`#${id}`).remove()
        }
    </script>
  </body>
</html>
